{
  "name": "concierge-service",
  "version": "4.3.0",
  "description": "Консьерж-сервис для помощи в бытовых задачах с розовой стилистикой и подписками",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm ci --only=production --no-audit",
    "audit:fix": "npm audit fix --force",
    "clean": "rm -rf node_modules package-lock.json concierge.db",
    "reset": "npm run clean && npm install",
    "reset-db": "rm -f concierge.db && npm start",
    "test": "echo \"Тесты будут добавлены позже\" && exit 0"
  },
  "keywords": [
    "concierge", 
    "service", 
    "help", 
    "tasks", 
    "subscription",
    "pink-design"
  ],
  "author": "Консьерж Сервис",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.3",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "uuid": "^10.0.0",
    "multer": "^1.4.5-lts.2",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
