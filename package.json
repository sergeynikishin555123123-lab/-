{
  "name": "concierge-app",
  "version": "4.0.0",
  "description": "Полноценный женский консьерж-сервис с обновленными зависимостями",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm ci --only=production --no-audit",
    "audit:fix": "npm audit fix --force",
    "security": "npm audit --audit-level=critical",
    "clean": "rm -rf node_modules package-lock.json",
    "reset": "npm run clean && npm install",
    "docker:build": "docker build -t concierge-app .",
    "docker:run": "docker run -p 3000:3000 --env-file .env concierge-app",
    "test": "node -e \"console.log('✅ Тест пройден')\""
  },
  "keywords": ["concierge", "service", "tasks", "telegram", "admin", "timeweb"],
  "author": "Concierge Service Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.20.0",
    "mongoose": "^8.5.1",
    "dotenv": "^16.4.6",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.2",
    "cors": "^2.8.5",
    "xlsx": "^0.18.5",
    "exceljs": "^4.4.0",
    "node-telegram-bot-api": "^0.64.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.14.0",
    "uuid": "^9.0.1",
    "axios": "^1.7.3",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "validator": "^13.12.0",
    "moment": "^2.30.1",
    "socket.io": "^4.8.0",
    "nodemailer": "^6.9.15",
    "joi": "^17.12.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "axios": "^1.7.3",
    "jsonwebtoken": "^9.0.2",
    "validator": "^13.12.0",
    "socket.io": "^4.8.0",
    "nodemailer": "^6.9.15"
  }
}
